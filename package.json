{
  "name": "eagle-ovault-clean",
  "version": "1.0.0",
  "description": "Eagle Omnichain Vault - Clean LayerZero OVault Implementation",
  "scripts": {
    "precheck": "npx ts-node scripts/pre-deployment-check.ts",
    "compile": "pnpm hardhat compile",
    "test": "pnpm hardhat test",
    "docs:generate": "node scripts/generate-contract-docs.js && node scripts/generate-update-log.js && node scripts/create-docs-index.js",
    "docs:preview": "node scripts/generate-contract-docs.js && node scripts/generate-update-log.js && node scripts/create-docs-index.js && open docs-export/team/Updates/Smart-Contracts/index.html",
    "docs:verify": "node scripts/verify-docs-setup.js",
    "lz:wire": "bash scripts/run-hardhat-esm.sh lz:oapp:wire",
    "lz:wire:manual": "npx tsx scripts/deployment/wire-oapp-manual.ts",
    "lz:wire:complete": "npx tsx scripts/deployment/wire-oapp-complete.ts",
    "lz:wire:metadata": "npx tsx scripts/deployment/wire-with-metadata-tools.ts",
    "lz:set:delegate": "npx tsx scripts/deployment/set-layerzero-delegate.ts",
    "lz:set:options": "npx tsx scripts/deployment/set-enforced-options.ts",
    "lz:set:dvn": "npx tsx scripts/deployment/set-dvn-config.ts",
    "lz:set:executor": "npx tsx scripts/deployment/set-executor-config.ts",
    "lz:verify": "npx tsx scripts/verification/verify-layerzero-config.ts",
    "lz:send:test": "npx tsx scripts/testing/send-eagle-cross-chain.ts",
    "postinstall": "bash scripts/patch-layerzero-imports.sh",
    "lz:wire:bsc": "npx hardhat lz:oapp:wire --networks bsc",
    "lz:wire:arbitrum": "npx hardhat lz:oapp:wire --networks arbitrum",
    "lz:wire:base": "npx hardhat lz:oapp:wire --networks base",
    "lz:wire:avalanche": "npx hardhat lz:oapp:wire --networks avalanche",
    "lz:wire:all": "npx hardhat lz:oapp:wire --networks bsc,arbitrum,base,avalanche",
    "calculate:addresses": "npx hardhat run scripts/calculate-create2-address.ts",
    "simulate:production": "npx hardhat run scripts/simulate-production-deployment.ts --network localhost",
    "deploy:production": "npx ts-node scripts/production-deployment-orchestrator.ts",
    "deploy:production:forge": "forge script script/DeployProductionVanity.s.sol:DeployProductionVanity --rpc-url $ETHEREUM_RPC_URL --broadcast --verify --slow",
    "validate:system": "npx ts-node scripts/validate-deployment-system.ts",
    "check:vault": "npx hardhat run scripts/checks/check-current-vault-state.ts --network ethereum",
    "check:charm": "npx hardhat run scripts/checks/check-charm-success.ts --network ethereum",
    "verify:production": "npx hardhat run scripts/verification/verify-production-deployment.ts --network ethereum",
    "verify:same-address": "npx hardhat run scripts/verification/verify-same-address.ts",
    "verify:wrapper": "npx hardhat run scripts/verification/verify-wrapper-ready.ts --network ethereum",
    "set:peers": "npx ts-node scripts/set-peers-ethereum-base.ts"
  },
