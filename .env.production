# Eagle OVault Production Environment Configuration
# This file contains non-sensitive production configuration
# Sensitive values MUST be stored in AWS Secrets Manager or GitHub Secrets

# ============================================================================
# ENVIRONMENT
# ============================================================================

NODE_ENV=production
ENVIRONMENT=production

# ============================================================================
# RPC ENDPOINTS (Mainnets - Use from AWS Secrets Manager)
# ============================================================================

# These should be loaded from AWS Secrets Manager in production
# ETHEREUM_RPC_URL - from AWS_SECRET_RPC_URLS
# BSC_RPC_URL - from AWS_SECRET_RPC_URLS
# ARBITRUM_RPC_URL - from AWS_SECRET_RPC_URLS
# BASE_RPC_URL - from AWS_SECRET_RPC_URLS
# AVALANCHE_RPC_URL - from AWS_SECRET_RPC_URLS

# ============================================================================
# LAYERZERO MAINNET CONFIGURATION
# ============================================================================

LZ_ETHEREUM_ENDPOINT_ID=30101
LZ_BSC_ENDPOINT_ID=30102
LZ_ARBITRUM_ENDPOINT_ID=30110
LZ_BASE_ENDPOINT_ID=30184
LZ_AVALANCHE_ENDPOINT_ID=30106

# ============================================================================
# MONITORING (Production)
# ============================================================================

# Load from GitHub Secrets or AWS Secrets Manager
# SLACK_WEBHOOK_URL
# PAGERDUTY_SERVICE_KEY
# PAGERDUTY_SECURITY_KEY

GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD - from secrets

# ============================================================================
# AWS CONFIGURATION (Production)
# ============================================================================

AWS_REGION=us-east-1
BACKUP_S3_BUCKET=eagle-ovault-backups-production
BACKUP_RETENTION_DAYS=90

# ============================================================================
# DEPLOYMENT OPTIONS (Production)
# ============================================================================

DEPLOYMENT_MODE=vanity
AUTO_VERIFY=true
ESTIMATE_GAS=true
REQUIRE_CONFIRMATION=true

# ============================================================================
# SECURITY (Production)
# ============================================================================

DEBUG=false
LOG_LEVEL=info

# ============================================================================
# RATE LIMITING (Production)
# ============================================================================

RPC_TIMEOUT=60000
MAX_CONCURRENT_REQUESTS=10
TX_RETRY_ATTEMPTS=3

# ============================================================================
# GAS CONFIGURATION (Production - Conservative)
# ============================================================================

MAX_PRIORITY_FEE_PER_GAS=2
MAX_FEE_PER_GAS=100

