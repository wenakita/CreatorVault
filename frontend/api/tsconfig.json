{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  // Only typecheck our local API proxy handlers used by the Vite dev server.
  // Avoid pulling in unrelated serverless files that depend on backend-only deps.
  "include": [
    "./zora/**/*.ts",
    "./debank/**/*.ts",
    "./dexscreener/**/*.ts",
    "./onchain/**/*.ts",
    "./auth/**/*.ts",
    "./status/**/*.ts",
    "./creator-allowlist.ts",
    "./creator-access/**/*.ts",
    "./admin/**/*.ts",
    "./_lib/**/*.ts",
    "./analytics.ts",
    "./sync-vault-data.ts",
    "./webhook.ts",
    "../src/types/vercel-node.d.ts"
  ],
  "exclude": ["node_modules"]
}
