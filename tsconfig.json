{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "hardhat.config.ts",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "telegram-bot"
  ]
}

