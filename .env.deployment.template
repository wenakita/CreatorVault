# ===================================================================
# DEPLOYMENT OPTIONS
# ===================================================================
# Use CREATE2 for deterministic addresses (recommended)
USE_CREATE2=true

# Salt for CREATE2 deployment (leave empty to generate)
CREATE2_SALT=

# Verify contracts on block explorers after deployment
AUTO_VERIFY=true

# Wait for confirmations before proceeding
CONFIRMATIONS=2

# ===================================================================
# GAS SETTINGS
# ===================================================================
# Maximum gas price willing to pay (in gwei)
# Leave empty for automatic
MAX_GAS_PRICE=

# Gas limit multiplier (1.2 = 20% buffer)
GAS_LIMIT_MULTIPLIER=1.2

# ===================================================================
# MONITORING & ALERTS (Optional)
# ===================================================================
# Webhook URL for deployment notifications
WEBHOOK_URL=

# Email for notifications
NOTIFICATION_EMAIL=

# ===================================================================
# ADVANCED OPTIONS
# ===================================================================
# Enable debug logging
DEBUG=false

# Dry run (simulate without broadcasting)
DRY_RUN=false

# Skip tests before deployment
SKIP_TESTS=false

