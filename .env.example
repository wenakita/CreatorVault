# Deployment wallet public address (optional - derived from PRIVATE_KEY if not set)
PUBLIC_KEY=0x1234567890123456789012345678901234567890

# ====================================================================
# üåê RPC ENDPOINTS - REQUIRED
# ====================================================================

# Ethereum Mainnet (HUB CHAIN - Required)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Alternative: https://eth.llamarpc.com (public, rate-limited)

# Ethereum Sepolia Testnet (for testing)
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# BSC (Binance Smart Chain) - SPOKE CHAIN
BSC_RPC_URL=https://bsc-rpc.publicnode.com

# Arbitrum Mainnet - SPOKE CHAIN
ARBITRUM_RPC_URL=https://arbitrum-rpc.publicnode.com

# Base Mainnet - SPOKE CHAIN
BASE_RPC_URL=https://base-rpc.publicnode.com

# Avalanche C-Chain - SPOKE CHAIN
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# ====================================================================
# üîç BLOCK EXPLORER API KEYS (for contract verification)
# ====================================================================

ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY
SNOWTRACE_API_KEY=YOUR_SNOWTRACE_API_KEY

